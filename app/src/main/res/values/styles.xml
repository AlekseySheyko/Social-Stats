<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SocialTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar.Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ImageAccountType">
        <item name="android:background">@drawable/image_selector</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TextStyle</item>
    </style>

    <style name="MyActionBar.TextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ff878687</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyActionBar.Transparent"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/transparent</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/MyActionBar.Transparent.TextStyle</item>
    </style>

    <style name="MyActionBar.Transparent.TextStyle" parent="@style/MyActionBar.TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="TextBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SocialContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListViewService">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:divider">@color/stroke</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@drawable/contour_transparent_bg_normal</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/contour_transparent_bg_selector</item>
        <item name="android:text">@string/add_account_label</item>
    </style>

</resources>
